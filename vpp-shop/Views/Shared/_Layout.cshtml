@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Twinkle</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    @{
        var userId = Context.Session.GetInt32("USER_ID");
        var userName = Context.Session.GetString("USER_NAME");
    }

    <!-- ===== TOP BAR ===== -->
    <div class="top-bar">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                Chào mừng bạn đến Website Công ty Cổ phần văn phòng phẩm Twinkle |
                Email: dvkh@Twinkle.com.vn
            </div>
            <div class="top-right">
                @if (userId != null)
                {
                    <span>Xin chào <strong>@userName</strong></span>
                    <a asp-controller="Auth" asp-action="Logout">Đăng xuất</a>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                }
                <a href="#">Liên hệ</a>
            </div>
        </div>
    </div>

    <!-- ===== MAIN HEADER ===== -->
    <div class="main-header">
        <div class="container">
            <div class="row align-items-center">

                <!-- LOGO -->
                <div class="col-lg-2 d-flex align-items-center">
                    <a asp-controller="Home" asp-action="Index" class="logo-wrap">
                        <img src="~/images/logo/Twinkle.png" alt="Twinkle" class="logo-img">
                    </a>
                </div>


                <!-- SEARCH -->
                <div class="col-lg-6">
                    <div class="search-box">
                        <input type="text" placeholder="Tìm kiếm sản phẩm...">
                        <button type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>

                <!-- HOTLINE + CART -->
                <div class="col-lg-4 d-flex justify-content-end align-items-center gap-4">

                    <!-- HOTLINE -->
                    <div class="hotline">
                        <i class="fa-solid fa-phone-volume"></i>
                        <div class="hotline-info">
                            <span class="hotline-label">Gọi đặt hàng</span>
                            <span class="hotline-number">070.7431804</span>
                        </div>
                    </div>

                    <!-- GIỎ HÀNG -->
                    <a asp-controller="Cart"
                       asp-action="Index"
                       class="cart-simple">

                        <i class="fa-solid fa-cart-shopping"></i>
                        <span class="cart-text">Giỏ hàng</span>
                        <span class="cart-count">
                            @await Component.InvokeAsync("CartCount")
                        </span>

                    </a>



                </div>


            </div>
        </div>
    </div>

    <!-- ===== MENU ===== -->
    <div class="menu-bar">
        <div class="container">
            <ul class="menu-list">
                <li><a href="#">Trang Chủ</a></li>
                <li class="menu-item has-dropdown">
                    <a href="#">Sản phẩm</a>
                    @await Component.InvokeAsync("CategoryMenu")
                </li>


                <li><a href="#">HỌA CỤ SAKURA</a></li>
                <li><a href="#">STEAM/STEM</a></li>
                <li><a href="#">KHUYẾN MÃI</a></li>
                <li><a href="#">BLOG</a></li>
                <li><a href="#">SHOWROOM 360</a></li>
            </ul>
        </div>
    </div>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    document.querySelectorAll('.mega-tab').forEach(tab => {
        tab.addEventListener('mouseenter', function () {

            document.querySelectorAll('.mega-tab')
                .forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.mega-content')
                .forEach(c => c.classList.remove('active'));

            this.classList.add('active');
            document.getElementById(this.dataset.tab)
                .classList.add('active');
        });
    });
</script>

