@model vpp_shop.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<link rel="stylesheet" href="~/css/web/login.css" />

<div class="login-wrapper">
    <div class="login-box">
        <h2>KHÁCH HÀNG ĐĂNG KÝ</h2>
        <p class="login-desc">
            Vui lòng điền đầy đủ thông tin để tạo tài khoản
        </p>

        <form method="post">
            <div class="form-group">
                <label>Họ và tên <span>*</span></label>
                <input asp-for="FullName" placeholder="Nhập họ và tên" />
            </div>

            <div class="form-group">
                <label>Email <span>*</span></label>
                <input asp-for="Email" placeholder="Nhập email" />
            </div>

            <div class="form-group">
                <label>Số điện thoại</label>
                <input asp-for="Phone" placeholder="Nhập số điện thoại" />
            </div>

            <div class="form-group">
                <label>Mật khẩu <span>*</span></label>
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" />
            </div>

            <div class="login-actions">
                <button type="submit" class="btn-login">Đăng ký</button>
                <a asp-controller="Auth" asp-action="Login" class="forgot-password">
                    Đã có tài khoản?
                </a>
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="login-error">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
