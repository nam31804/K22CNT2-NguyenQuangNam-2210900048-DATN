@model vpp_shop.Models.ViewModels.LoginViewModel

<h2>Đăng nhập</h2>

<form method="post">
    <input asp-for="Email" placeholder="Email" /><br />
    <input asp-for="Password" type="password" placeholder="Mật khẩu" /><br />

    <button type="submit">Đăng nhập</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
