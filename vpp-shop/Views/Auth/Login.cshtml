@model vpp_shop.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<link rel="stylesheet" href="~/css/web/login.css" />

<div class="login-wrapper">
    <div class="login-box">
        <h2>KHÁCH HÀNG ĐĂNG NHẬP</h2>
        <p class="login-desc">
            Nếu bạn có một tài khoản, xin vui lòng đăng nhập
        </p>

        <form method="post">
            <div class="form-group">
                <label>Email <span>*</span></label>
                <input asp-for="Email" placeholder="Nhập email" />
            </div>

            <div class="form-group">
                <label>Mật khẩu <span>*</span></label>
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" />
            </div>

            <div class="login-actions">
                <button type="submit" class="btn-login">Đăng nhập</button>
                <a href="#" class="forgot-password">Mất mật khẩu?</a>
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="login-error">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
