<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/css/admin-common.css" />

    <link rel="stylesheet" href="~/css/admin/admin-product.css" />
    <link rel="stylesheet" href="~/css/admin/admin-order.css" />
    <link href="~/sb-admin-2/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/sb-admin-2/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @await Html.PartialAsync("_AdminSidebar")
        <!-- End Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                @await Html.PartialAsync("_AdminTopbar")
                <!-- End Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="text-center my-auto">
                        <span>© 2025 vpp_shop Admin</span>
                    </div>
                </div>
            </footer>
            <!-- End Footer -->

        </div>
        <!-- End Content Wrapper -->

    </div>
    <!-- End Page Wrapper -->


    <script src="~/sb-admin-2/vendor/jquery/jquery.min.js"></script>
    <script src="~/sb-admin-2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/sb-admin-2/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/sb-admin-2/js/sb-admin-2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/admin-reload.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Styles", required: false)

    @RenderSection("Scripts", required: false)
</body>
</html>
